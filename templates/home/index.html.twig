{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ name }}!</h1>

{# Pour créer des données en dur en attentant le backend (base de données) #}
{% set item = {"nom" : "Pomme", "forme" : "Ronde", "poids" : 200} %}

<p>Nom : {{item.nom}}</p>
<p>Forme : {{item.forme}}</p>
<p>Poids : {{item.poids}}</p>

<hr>

{% set michel = {"name" : "Michel", "age" : 14} %}
{% set zak = {"name" : "zAK", "age" : 33} %}
{% set david = {"name" : "David", "age" : null} %}
{% set users = {michel, zak, david} %}


<h3>Utilisateurs :</h3>
{% for user in users %}

<p>Name : {{user.name | title}}</p>

{% if user.age %}
<p>Age: {{user.age}}</p>
{% else %}
    <p>Age: Undefined</p>
{% endif %}
    <hr>
{% endfor %}

</div>
{% endblock %}
